{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",           // required for moduleResolution: nodenext
    "moduleResolution": "nodenext", // resolves modern ESM packages
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
